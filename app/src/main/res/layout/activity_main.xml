<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFFFF0"
    >

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="#1122F5"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/otp"
            android:id="@+id/Tv"
            android:textColor="#fff"
            android:textSize="35sp"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"
            />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48sp"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:padding="10sp"
        android:id="@+id/Relative"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Phone number "
                android:textSize="25sp"
                android:textColor="#000"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:gravity="center_vertical"
                >

                <com.hbb20.CountryCodePicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ccp"
                    />

                <EditText
                    android:id="@+id/Phonenumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8sp"
                    android:hint="phone"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:maxLength="10"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/clicl_dr"
                android:layout_marginTop="30sp"
                android:text="Send OTP"
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/OTPButton1"
                />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:id="@+id/Relative2"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="489dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:fontFamily="serif"
                android:text="Enter OTP"
                android:textColor="#000"
                android:textSize="35sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/otpText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="40sp"
                android:layout_marginRight="20sp"
                android:hint="OTP"
                android:inputType="number"
                android:maxLength="6"
                android:paddingLeft="8sp"
                android:paddingRight="15sp"
                android:singleLine="true"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/OTPButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:background="@drawable/click2_dr"
                android:text="Verify"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="15sp"
                android:text="Back"
                android:textColor="#0529BE"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>